{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "paths": {
      "dictionary": ["client/dictionary"],
      "types/*": ["types/*"],
      "components/*": ["client/components/*"],
      "requests/*": ["client/requests/*"]
    }
  }
}
